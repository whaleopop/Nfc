# Environment Configuration Example
# Copy this file to .env and fill in your values

# Docker Image Configuration (for production with GHCR)
GITHUB_REPOSITORY_OWNER=your-github-username
IMAGE_TAG=latest

# Backend Images (optional - defaults to GHCR)
# BACKEND_IMAGE=ghcr.io/your-username/nfc-backend-nfc:latest
# WEB_IMAGE=ghcr.io/your-username/nfc-frontend-nfc:latest

# Django Configuration
SECRET_KEY=NFC_HEX
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (PostgreSQL)
POSTGRES_DB=nfc_medical
POSTGRES_USER=nfc_user
POSTGRES_PASSWORD=changeme
DB_PASSWORD=changeme

# Redis Configuration
REDIS_PASSWORD=changeme

# Celery Configuration
CELERY_BROKER_URL=redis://:changeme@redis:6379/0
CELERY_RESULT_BACKEND=redis://:changeme@redis:6379/0

# Frontend Configuration (Vite)
VITE_API_URL=http://localhost:8000/api
VITE_APP_NAME=NFC Medical
VITE_ENVIRONMENT=development

# Node Environment
NODE_ENV=development
